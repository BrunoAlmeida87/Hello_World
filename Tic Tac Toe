#função que checa se todos os espaços já foram ocupados
    #Retorna True se tiver espaço
    # Falso se não tiver espaço
 
def full_board_check(jogada):
 #jogada = ["1",'b','c','d','e','f','g','h','i']
 for x in jogada:
    if( x.isdigit()):
      print(x)
      return True
    else:
      return False

print(full_board_check(jogada))

