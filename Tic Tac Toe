    #função que checa se há espaço livre para o jogador inserir sua jogada
#space_check(jogada,5)  
def space_check(jogada, position):
    jogada = ["1",'2','3','4','X','6','O','8','9']
  

    if( jogada[position-1].isdigit()):
        return True
    else:
        return False
