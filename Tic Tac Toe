#8



def player_choice(jogada):
  position = int(input('Escolha sua jogada: ')) 
  while space_check(jogada, position) == False:
    print("Este local está ocupado, tente outra")
    position = int(input('Escolha sua jogada: ')) 
  else :
    return position
    
print(player_choice(jogada))


